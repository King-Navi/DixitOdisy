<UserControl x:Class="WpfCliente.GUI.ListaAmigosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCliente.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="260">
    <Grid Width="260" Height="500" >
        <DockPanel LastChildFill="True">
            <!--Header-->
            <StackPanel Background="Aqua" DockPanel.Dock="Top">
                <Label Content="/Lista de amgios"></Label>
            </StackPanel>
            <!--Footer-->
            <StackPanel Background="Beige" DockPanel.Dock="Bottom">
                <Label Content="Son las 18:17"></Label>
            </StackPanel>
            <!--Contenido-->
            <StackPanel Background="Chocolate" DockPanel.Dock="Bottom">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl Background="DarkGray" ItemsSource="{Binding Amigos}">
                        <!-- Define cómo se visualiza cada elemento en la lista -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Aquí se muestra el AmigoUserControl -->
                                <local:AmigoUserControl DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <!-- Define cómo se organiza la disposición de los elementos -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- StackPanel organiza los UserControl B en vertical -->
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>

<UserControl x:Class="UtilidadesLibreria.UsuarioControl.CambiarIdiomaMenuDesplegable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilidadesLibreria.UsuarioControl"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Label x:Name="cambiarIdiomaLabel" Content="Cambiar idioma" HorizontalAlignment="Left" Margin="272,214,0,0" VerticalAlignment="Top" Foreground="White" Background="Black" Width="97"/>
        <ComboBox x:Name="cambiarIdiomaMenuDesplegable" HorizontalAlignment="Left" Margin="369,214,0,0" VerticalAlignment="Top" Width="151" Height="26" Text="Seleccionar idioma" SelectionChanged="SelecionarIdioma">
            <ComboBoxItem Content="Español" Tag="{StaticResource EspañolTag}"/>
            <ComboBoxItem Content="English" Tag="{StaticResource EnglishTag}"/>
        </ComboBox>

    </Grid>
</UserControl>


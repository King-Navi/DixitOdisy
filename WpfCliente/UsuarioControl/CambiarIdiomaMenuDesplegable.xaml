<UserControl x:Class="UtilidadesLibreria.UsuarioControl.CambiarIdiomaMenuDesplegable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilidadesLibreria.UsuarioControl"
             mc:Ignorable="d" Height="253" Width="730">

    <Grid Margin="0,26,115,155">
        <Label x:Name="cambiarIdiomaLabel" Content="Cambiar idioma" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Foreground="White" Background="Black" Width="97"/>
        <ComboBox x:Name="cambiarIdiomaMenuDesplegable" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Top" Width="150"  Text="Seleccionar idioma" SelectionChanged="SelecionarIdioma">
            <ComboBoxItem Content="Español" Tag="{StaticResource EspañolTag}"/>
            <ComboBoxItem Content="English" Tag="{StaticResource EnglishTag}"/>
        </ComboBox>
        <Image HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="74" Margin="280,0,0,0" Source="/Recursos/logoIdioma.png"/>

    </Grid>
</UserControl>


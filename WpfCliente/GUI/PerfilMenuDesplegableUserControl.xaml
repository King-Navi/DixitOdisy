<UserControl x:Class="WpfCliente.GUI.PerfilMenuDesplegableUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCliente.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <!-- Menú Desplegable -->
        <Menu Width="45" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,0,0" Background="{x:Null}">
            <MenuItem x:Name="menuItemPerfil" Header="Perfil">
                <MenuItem x:Name="menuItemEditarPerfil" Header="Editar Perfil" Click="AbrirEditarVentana" />
                <MenuItem x:Name="menuItemCerrarSesion" Header="Cerrar sesión" Click="CerrarSesion" />
            </MenuItem>
        </Menu>
        <Image x:Name="imagenPerfil" Height="50" VerticalAlignment="Top" Source="pack://application:,,,/WpfCliente;component/Recursos/profile.jpg" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>

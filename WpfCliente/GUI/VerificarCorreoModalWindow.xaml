<Window x:Class="WpfCliente.GUI.VerificarCorreoModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCliente.GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Verificar correo" Height="148" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/Recursos/cajaLogin.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}" >
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="{x:Type Button}" >
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelIngresarCodigo" Content="Ingrese el código" FontFamily="Lucida Sans Unicode" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Foreground="Black" Grid.Row="1" Height="38" Width="131" Grid.RowSpan="2"/>
        <TextBox  x:Name="textBoxCodigo" Grid.Row="0" Width="260" Height="25" Margin="60,32,60,8" Grid.RowSpan="3"/>
        <Button x:Name="buttonEnviarCodigoNuevamente" Content="¿No recibiste el código? Volver a enviar" FontFamily="Lucida Sans Unicode" FontSize="8" Grid.Row="2" Foreground="#8dadb6" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="60,27,60,-10" Click="buttonEnviarCodigoNuevamente_Click"/>
        <Button x:Name="buttonAceptar" Content="Aceptar" FontFamily="Lucida Sans Unicode" Grid.Row="2" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,45,0,-45" Click="buttonAceptar_Click"/>
    </Grid>
</Window>

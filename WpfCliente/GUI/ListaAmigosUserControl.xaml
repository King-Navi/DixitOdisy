<UserControl x:Class="WpfCliente.GUI.ListaAmigosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCliente.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="260" Unloaded="CerrandoUserControl">
    <Grid Width="220" Height="400" >
        <DockPanel LastChildFill="True">
            <StackPanel d:Background="#E0DCC7" DockPanel.Dock="Top">
                <Label x:Name="labelListaAmigos" HorizontalContentAlignment="Center" FontFamily="Lucida Sans Unicode Bold" BorderBrush="Black" BorderThickness="3" d:Content="Lista de amigos"></Label>
            </StackPanel>
            <StackPanel Background="#E0DCC7" DockPanel.Dock="Bottom">
                <Label x:Name="labelHora" d:Content="Son las 18:17" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="3" FontFamily="Lucida Sans Unicode Bold">
                    <Image Height="100" Width="100"/>
                </Label>
            </StackPanel>
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="itemsControlAmigos" Background="#A9A9A9" ItemsSource="{Binding Amigos}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:AmigoUserControl DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DockPanel>
        <DataGrid HorizontalAlignment="Left" Height="864" Margin="392,-500,0,0" VerticalAlignment="Top" Width="1754" d:ItemsSource="{d:SampleData ItemCount=5}"/>
    </Grid>
</UserControl>

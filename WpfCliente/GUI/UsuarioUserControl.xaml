<UserControl x:Class="WpfCliente.GUI.UsuarioUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCliente.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid Height="100" Width="250" d:Background="Aqua">
        <Image x:Name="imageAmigo" Source="{Binding Foto}"  d:Source="pack://application:,,,/WpfCliente;component/Recursos/profile.jpg" Width="60" Height="60" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="9,0,0,0" ></Image>
        <Label x:Name="labelNombreAmigo" Content="{Binding Nombre}" d:Content="PedroSanchz27" Canvas.Left="85" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="81,10,0,0"></Label>
        <!--Podemos agregar mas cosas como estisticas-->
    </Grid>
</UserControl>

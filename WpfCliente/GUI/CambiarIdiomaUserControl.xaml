<UserControl x:Class="WpfCliente.GUI.CambiarIdiomaMenuDesplegable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCliente.GUI"
             mc:Ignorable="d" d:Height="259" d:Width="730" Unloaded="CerrarControl">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Label x:Name="cambiarIdiomaLabel" Content="Cambiar idioma"   VerticalAlignment="Top" Foreground="White" Background="Black" Width="97"/>
        <ComboBox x:Name="cambiarIdiomaMenuDesplegable"  VerticalAlignment="Top" Width="150"  Text="Seleccionar idioma" SelectionChanged="SelecionarIdioma">
            <ComboBoxItem Content="Español" Tag="{StaticResource EspañolTag}"/>
            <ComboBoxItem Content="English" Tag="{StaticResource EnglishTag}"/>
        </ComboBox>
            <Image  Height="50" VerticalAlignment="Top"  Source="/Recursos/logoIdioma.png"/>
        </StackPanel>
    </Grid>
</UserControl>


<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCliente.GUI"
        xmlns:Estilos="clr-namespace:WpfCliente.Estilos" x:Class="WpfCliente.GUI.ReconectandoWindow"
        mc:Ignorable="d"
         ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Estilos:WaveAnimation Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonReconectar" d:Content="Reconectar" HorizontalAlignment="Center" Margin="0,361,0,0" VerticalAlignment="Top" Click="ClicButtonReconectar"/>

    </Grid>
</Window>

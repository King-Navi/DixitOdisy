<UserControl x:Class="WpfCliente.GUI.ListaAmigosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCliente.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="260">
    <Grid Width="220" Height="400" >
        <DockPanel LastChildFill="True">
            <!--Header-->
            <StackPanel d:Background="Aqua" DockPanel.Dock="Top">
                <Label d:Content="Lista de amgios"></Label>
            </StackPanel>
            <!--Footer-->
            <StackPanel Background="Beige" DockPanel.Dock="Bottom">
                <Label x:Name="labelHora" d:Content="Son las 18:17" Unloaded="Cerrado"/>
            </StackPanel>
            <!--Contenido-->
            <!--<Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="itemsControlAmigos" Background="DarkGray">
                        --><!-- El ItemsPanel organiza los elementos --><!--
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                            
                        </ItemsControl.ItemsPanel>
                        <d:Grid Height="80" Width="190" d:Background="Azure"></d:Grid>
                    </ItemsControl>
                    
                </ScrollViewer>
            </Grid>-->
            <!--Contenido-->
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="itemsControlAmigos" Background="DarkGray" ItemsSource="{Binding Amigos}">
                        <!-- El ItemsPanel organiza los elementos -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <!-- DataTemplate para los elementos del ItemsControl -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Aquí se muestra el AmigoUserControl con el DataContext correspondiente -->
                                <local:AmigoUserControl DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>

<Window x:Class="WpfCliente.GUI.SalaEsperaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCliente.GUI"
        mc:Ignorable="d"
        Title="SalaEspera" MinWidth="800" MinHeight="450" VerticalAlignment="Center" Closing="CerrandoVentana">
    <Grid>

        <DockPanel LastChildFill="True">
            <!--Encabezado-->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="Aqua" HorizontalAlignment="Right">
                <Label Content="coNFIG"/>
                <Label Content="uSUARIO FOTO"/>
            </StackPanel>


            <!--Pie de pagina-->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="Coral" HorizontalAlignment="Center">
                <Button Content="Unirse a sala de espera"></Button>
                <Button Content="Configurar partida"></Button>
                <Button x:Name="buttonEmpezarPartida" Content="Empezar partida" Click="ClicButtonEmpezarPartida"></Button>
            </StackPanel>
            <!--Amigos conectado lista-->
            <StackPanel DockPanel.Dock="Left" Background="DarkGray" Orientation="Vertical">
                <Label Content="Amigos"/>
                <Label Content="Perosna"/>
                <Label Content="Perosna"/>
                <Label Content="Perosna"/>
                <Label Content="Perosna"/>
            </StackPanel>
            <!--Middler-->
            <StackPanel Orientation="Vertical"  Background="AntiqueWhite" HorizontalAlignment="Center">
                <Label x:Name="labelCodigoSala" d:Content="Codigo de la Sala"></Label>
                <!--Usuario en la sala de espera-->
                <StackPanel Orientation="Vertical">
                    <local:ListaUsuariosSalaUserControl x:Name="usuariosSalaUserControl" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <!-- UserControl superpuesto -->
        <local:ChatUserControl x:Name="chatUserControl" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"></local:ChatUserControl>
    </Grid>

</Window>

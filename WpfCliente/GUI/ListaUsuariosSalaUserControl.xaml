<UserControl x:Class="WpfCliente.GUI.ListaUsuariosSalaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCliente.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="700">
        <Label x:Name="labelUsuariosEnLobby" d:Content="Usuarios en el lobby" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ItemsControl x:Name="itemsControlUsuarios" ItemsSource="{Binding JugadoresEnSala}" Margin="5,30,5,5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:UsuarioUserControl DataContext="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
